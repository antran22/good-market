<form class="container mt-3 text-center bg-light p-3" action="/register" method="POST">
    <h1>Register</h1>
    <div class="mb-3 row">
        <label for="username" class="form-label col-sm-2">Username</label>
        <div class="col-sm-10">
            <input class="form-control" id="username" name="username">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="name" class="form-label col-sm-2">Display Name</label>
        <div class="col-sm-10">
            <input class="form-control" id="name" name="displayName">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="password" class="form-label col-sm-2">Password</label>
        <div class="col-sm-10">
            <input class="form-control" id="password" type="password" name="password"/>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mb-3">Register</button>
</form>
