<div class="p-3 mt-3 mb-3 bg-light rounded">
    <div class="row">
        <div class="col-xl-1 col-lg-2 col-sm-3">
            <% if ( comment.author.avatar ) { %>
                <img src="<%= comment.author.avatar %>" class="rounded-circle" width="50px" height="50px"
                     alt="<%= comment.author.displayName %>'s avatar"/>
            <% } else { %>
                <div class="bg-dark rounded-circle" style="height: 50px; width: 50px;"></div>
            <% } %>
        </div>
        <div class="col-xl-9 col-lg-8 col-sm-9">

            <a href="/user/<%= comment.author._id %>"><%= comment.author.displayName %></a>
            <div class="mb-0">
                <% for (let i = 1; i <= comment.rating; ++i) { %>
                    <i class="bi bi-star-fill text-danger"></i>
                <% } %>
                <% for (let i = comment.rating + 1; i <= 5; ++i) { %>
                    <i class="bi bi-star text-danger"></i>
                <% } %>
            </div>
            <div class="mb-2">
                <i class="text-secondary"><%= new Date(comment.createdAt).toDateString() %></i>
            </div>
            <h5><%= comment.title %></h5>
            <p><%= comment.content %></p>
        </div>
        <div class="col-lg-2">
            <% if (request.user._id.equals(comment.author._id)) { %>
                <a class="btn btn-primary float-right" href="/comment/<%= comment._id %>/delete">Delete</a>
            <% } %>
        </div>
    </div>

</div>
