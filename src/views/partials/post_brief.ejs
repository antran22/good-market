<div class="row">
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="<%='\\..\\'+product.images[0]%>" alt="..." class="img-responsive thumbnail-brief">
            <div class="caption">
                <h3><%=product.title%></h3>
                <p class="description"><%=product.description%></p>
                <div class="clearfix">
                    <div class="price pull-left">$<%=product.price%></div>
                    <% if (isSeller){%>
                    <a href="/fix/<%=product._id%>" class="btn btn-success pull-right" role="button">Fix</a>
                    <%} else {%>
                    <a href="/add-to-cart/<%=product._id%>" class="btn btn-success pull-right" role="button">Add to Cart</a>
                    <%}%>
                </div>
            </div>
        </div>
    </div>
</div>