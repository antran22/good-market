<div class="form-floating mt-3">
    <input id="title" name="title" type="text" placeholder="Title" class="form-control input-md" required
           value="<%= post?.title ?? "" %>">
    <label class="" for="title">Post title</label>
</div>

<div class="form-floating mt-3">
        <textarea class="form-control" id="description" name="description" style="height: 400px;"
                  placeholder="Body"
                  required><%= post?.description ?? "" %></textarea>
    <label class="" for="description">Post description</label>
</div>

<div class="form-floating mt-3">
    <input id="price" name="price" type="number" class="form-control input-md" required
           placeholder="Price"
           value="<%= post?.price ?? "" %>">
    <label class="" for="price">Post price</label>
</div>

<div class="mt-3">
    <label for="images" class="form-label col-sm-4">Post Images (at most 5)</label>
    <div>
        <%- await include("../../partials/imageUpload", {
            fieldName: "images",
            defaultUrls: post?.images,
            count: 5
        }); %>
    </div>
</div>

<div class="mt-3">
    <% if (post) { %>
        <label for="sold-checkbox">
            Mark as sold
        </label>
        <input type="checkbox" data-toggle="switchbutton" data-onlabel="Sold" data-offlabel="Not<br/>Sold"
               data-onstyle="success" data-offstyle="danger" id="sold-checkbox" name="sold" <%= post.sold ? "checked" : "" %>/>
    <% } %>
</div>
