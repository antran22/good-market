<% const formatter = new Intl.NumberFormat('vi-VN', {
    style: 'currency',
    currency: 'VND'
}); %>
<div class="container row">
    <div class="col-md-9">
        <div id="imageCarousel" class="carousel slide bg-light mb-5" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% for (let i = 0; i < post.images.length; ++i) { %>
                    <div class="carousel-item <%= i === 0 ? "active" : "" %>">
                        <img src="<%= post.images[i] %>" class="d-block w-100" alt="Image <%= i %>"
                             style="height: 400px; object-fit: contain">
                    </div>
                <% } %>
            </div>
            <button class="carousel-control-prev justify-content-start" type="button" data-bs-target="#imageCarousel"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next justify-content-end" type="button" data-bs-target="#imageCarousel"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <h1><%= post.title %></h1>
        <h3 class="text-danger"><%= formatter.format(post.price) %></h3>
        <p style="text-justify: auto; text-align: justify">
            <%= post.description %>
        </p>
    </div>
    <div class="col-md-3 bg-light p-3">

        <div class="p-0" style="width: 50px; height: 50px">
            <%- await include("../../partials/avatar", {avatar: post.seller.avatar}) %>
        </div>
        <h4>
            <a class="text-decoration-none"
               href="/user/<%= post.seller._id %>"><%= post.seller.displayName %></a>
        </h4>

        <!--        Todo: Add chat route-->
        <a class="btn btn-info" href="/user/<%= post.seller._id %>">Contact seller</a>

    </div>
</div>

<div class="container row">
    <div class="col-12 col-sm-8 col-md-9">
        <div class="p-3 m-3">
            <h1 class="text-center">Comments</h1>
            <div class="bg-light p-3">
                <h3>Add more comment</h3>
                <%- await include("../../partials/comment/inputCommentInPost") %>
            </div>
            <% for(let i = 0; i < post.comments.length; i++ ) { %>
                <% if (post.comments[i] !== null) { %>
                    <%- await include("../../partials/comment/listingCommentInPost", {comment: post.comments[i]}) %>
                <% } %>
            <% } %>
        </div>
    </div>
</div>
