<div class="container w-50">
    <% for (let contact of contacts) { %>
        <div class="mt-3 bg-light p-4 rounded-3">
            <div class="row align-items-center">
                <div style="height: 50px; width: 50px;" class="col-3 p-0">
                    <%- await include("../../partials/avatar", {avatar: contact.avatar}) %>
                </div>
                <div class="offset-1 col-9">
                <h4><a class="text-decoration-none" href="/message/<%= contact._id %>"><%= contact.displayName %></a></h4>
                </div>
            </div>
        </div>
    <% } %>
</div>
