<link rel="stylesheet" href="/css/auth.css">
<form action="/register" method="POST" enctype="multipart/form-data" class="bg-light container p-5 text-center mb-5 rounded-3" id="auth-form">
    <h1 class="mb-3">Register</h1>
    <div class="mb-3 form-floating">
        <input class="form-control" id="username" name="username" value="<%= defaultBody?.username ?? "" %>"
               placeholder="username">
        <label for="username" class="form-label">Username</label>
    </div>
    <div class="mb-3 form-floating">
        <input class="form-control" id="displayName" name="displayName"
               value="<%= defaultBody?.displayName ?? "" %>" placeholder="displayName">
        <label for="displayName" class="form-label">Name</label>
    </div>
    <div class="mb-3 bg-white p-3 rounded-3" style="border: 1px solid #ced4ea">
        <label for="avatar" class="form-label">Avatar</label>
        <div class="border-2">
            <%- await include("../partials/imageUpload", {fieldName: "avatar", defaultUrls: [], count: 1}); %>
        </div>
    </div>
    <div class="mb-3 form-floating">
        <input class="form-control" id="phoneNumber" name="phoneNumber"
               value="<%= defaultBody?.phoneNumber ?? "" %>" placeholder="phone number">
        <label for="phoneNumber" class="form-label">Phone Number</label>
    </div>
    <div class="mb-3 form-floating">
        <input class="form-control" id="password" type="password" name="password" placeholder="password"/>
        <label for="password" class="form-label">Password</label>
    </div>
    <div class="mb-3 form-floating">
        <input class="form-control" id="password-confirm" type="password" name="passwordConfirm"
               placeholder="passwordConfirm"/>
        <label for="password-confirm" class="form-label">Password Confirm</label>
    </div>
    <button type="submit" class="btn btn-primary mb-3 px-5 py-2">Register</button>
</form>
